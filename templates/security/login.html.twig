{% extends 'base.html.twig' %}

{% block title %}MON COMPTE{% endblock %}

{% block body %}
<section class="bg-light ">
  <div class="container">
    <div class="row">

<div class="col-lg-5 mt-3">
        {#  message flash compte confirmé #}
        {% for message in app.flashes('compteAjout') %}
        <div class="alert alert-success" role="alert">
            {{ message | raw }}
        </div>
        {% endfor %}    

            
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary mt-3" type="submit">
                Je me connecte
            </button> &nbsp; <a href="{{path("app_ae_motdepasseoublie")}}">mot de passe oublié</a>
        </form>

        

</div>
<div class="col-lg-2" >&nbsp;</div>
<div class="col-lg-5  mt-3">
<h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
        <p class="mt-1">
            Pas encore de compte A&E Cookie Corner ?<br />
            nous avons à cœur de satisfaire les gourmands<br />
            N'attendez plus et rejoignez la tribu des Cookie Monsters...
        </p>
        <a href="{{ path('app_register') }}" class="btn btn-lg btn-primary mt-3" title="Inscription"> 
            {# <i class="fa-regular fa-address-card m-1 me-md-2"></i> #}
            Je m'inscris
        </a>

</div>

    </div>
  </div>
</section>        
{% endblock %}
