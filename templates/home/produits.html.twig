    <div class="row">
      {% for article in articles %}
        {# {{ dump(article.visuels)}} #}
    
      <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
        <div class="card w-100 my-2 shadow-2-strong">
          <a href="{{  path('app_article_show', {'id': article.id}) }}">
          {% if article.visuels is empty %}
            <img src="{{ asset('images/cookies/imageDefault.jpg') }}" 
          {% else %}
            <img src="{{ asset('images/cookies/'~ article.visuels[0]) }}" 
          {% endif %}
